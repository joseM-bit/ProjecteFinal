<odoo>
    <record id="view_taller_product_product_tree" model="ir.ui.view">
        <field name="name">taller.product.product.tree</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree string="Repuestos">
                <field name="name"/>
                <field name="default_code"/>
                <field name="list_price"/>
                <field name="categ_id"/>
                <field name="tipo_repuesto"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form personalizada para productos -->
    <record id="view_taller_product_product_form" model="ir.ui.view">
        <field name="name">taller.product.product.form</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <form string="Producto (Repuesto)">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="default_code"/>
                        <field name="categ_id"/>
                        <field name="list_price"/>
                        <field name="standard_price"/>
                        <field name="type"/>
                        <field name="uom_id"/>
                        <field name="uom_po_id"/>
                        <field name="description_sale"/>
                        <field name="tipo_repuesto"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
