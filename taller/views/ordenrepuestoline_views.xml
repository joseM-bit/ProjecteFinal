<odoo>
    <record id="view_taller_orden_repuesto_line_tree" model="ir.ui.view">
        <field name="name">taller.orden.repuesto.line.tree</field>
        <field name="model">taller.orden.repuesto.line</field>
        <field name="arch" type="xml">
            <tree string="Líneas de Repuestos">
                <field name="orden_id"/>
                <field name="producto_id"/>
                <field name="cantidad"/>
            </tree>
        </field>
    </record>

    <record id="view_taller_orden_repuesto_line_form" model="ir.ui.view">
        <field name="name">taller.orden.repuesto.line.form</field>
        <field name="model">taller.orden.repuesto.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Repuesto">
                <sheet>
                    <group>
                        <field name="orden_id" invisible="1"/>
                        <field name="producto_id"/>
                        <field name="cantidad"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
