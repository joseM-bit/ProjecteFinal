<odoo>
    <record id="view_facturas_nopagadas_wizard_form" model="ir.ui.view">
        <field name="name">facturas.nopagadas.wizard.form</field>
        <field name="model">facturas.nopagadas.wizard</field>
        <field name="arch" type="xml">
            <form string="Facturas No Pagadas">
                <sheet>
                    <group>
                        <field name="move_id" readonly="1"/>
                    </group>
                    <footer>
                        <button 
                            name="action_mostrar_facturas" 
                            string="Mostrar Facturas" 
                            type="object" 
                            class="btn-primary"
                        />
                        <button 
                            string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>